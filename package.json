{
  "name": "shadow-hunters-party-maker",
  "description": "A peer2peer web app to create shadow hunters game parties. Made with sapper (svelte).",
  "repository": "https://github.com/luc-freyermuth/shadow-hunters-party-maker",
  "license": "MIT",
  "version": "1.0.0",
  "scripts": {
    "dev": "svelte-kit dev",
    "build": "svelte-kit build",
    "preview": "svelte-kit preview",
    "start": "svelte-kit start",
    "theme:build": "node-sass --omit-source-map-url theme/theme.scss static/theme.css --output-style compressed",
    "theme:watch": "npm run theme:build -- --watch",
    "lint": "prettier --check . && eslint --ignore-path .gitignore .",
    "format": "prettier --write .",
    "test": "jest",
    "test:watch": "npm test -- --watch"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.14.7",
    "@sveltejs/adapter-netlify": "^1.0.0-next.10",
    "@sveltejs/kit": "^1.0.0-next.89",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/svelte": "^3.0.3",
    "@types/jest": "^26.0.23",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "babel-jest": "^27.0.5",
    "bulma": "^0.9.0",
    "console.table": "^0.10.0",
    "copy-to-clipboard": "^3.3.1",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-svelte3": "^3.1.0",
    "jest": "^27.0.5",
    "prettier": "~2.2.1",
    "prettier-plugin-svelte": "^2.2.0",
    "rxjs": "^6.6.3",
    "sass": "^1.0.0",
    "svelte": "^3.29.0",
    "svelte-jester": "^1.7.0",
    "svelte-preprocess": "^4.0.0",
    "ts-jest": "^27.0.3",
    "tslib": "^2.0.0",
    "typescript": "^4.0.0",
    "vite": "^2.1.5"
  },
  "type": "module",
  "jest": {
    "transform": {
      "^.+\\.svelte$": [
        "svelte-jester",
        {
          "preprocess": true
        }
      ],
      "^.+\\.ts$": "ts-jest",
      "^.+\\.js$": "babel-jest"
    },
    "moduleFileExtensions": [
      "js",
      "ts",
      "svelte"
    ]
  }
}
